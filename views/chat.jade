extends layout

block head
	script(src="/socket.io/socket.io.js")
	script(src="/javascripts/chat.js")
	script(type="text/javascript").
		var _gaq = _gaq || [];
		_gaq.push(['_setAccount', 'UA-47209889-1']);
		_gaq.push(['_trackPageview']);
		(function() {
			var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
			ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
			var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
		})();

block content
	.row
		.col-sm-12
			p Welcome to #{title}
	.row
		.col-sm-6
			#msg_list
		.col-sm-6
			form(action="",role="form",method="post",onsubmit="return false;")
				.form-group
					label.sr-only Your message
					input#message.text.form-control(type="text",placeholder="Your message")
				.form-group
					input.btn.btn-primary(type="submit", onclick="sendMessage();",value="Send all")
